{% extends 'base.html.twig' %}
 
{% block title %}Panneau Contrôle Comptes{% endblock %}

{% block body %}
	<div class="row">
    	<div class="col-12 offset-md-3 col-md-6 TitlePage">
    		<h1>Votre compte</h1>
    	</div>
	</div>
	<div class="row">
		<div class="col-12 offset-md-3 col-md-6">
		<h3>Nom: {{ user.Nom }}</h3>
